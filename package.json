{
  "name": "webpage-yaml-manifest",
  "version": "2.0.0",
  "description": "Advanced YAML-based webpage generator with modular architecture and multi-format conversion",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "lint": "eslint src/ server.js",
    "format": "prettier --write src/ server.js *.json *.md",
    "manifest:validate": "node cli.js validate",
    "manifest:convert": "node cli.js convert",
    "manifest:bundle": "node cli.js bundle"
  },
  "keywords": [
    "yaml",
    "manifest",
    "webpage-generator",
    "react",
    "vue",
    "php",
    "html",
    "converter",
    "modular",
    "web-scraper"
  ],
  "author": "Tom Sapletta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tom-sapletta-com/webpage.yaml"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "js-yaml": "^4.1.0",
    "jsdom": "^23.0.1",
    "cheerio": "^1.0.0-rc.12",
    "axios": "^1.6.2",
    "lodash": "^4.17.21",
    "semver": "^7.5.4",
    "mime-types": "^2.1.35",
    "yargs": "^17.7.2",
    "chalk": "^4.1.2",
    "inquirer": "^8.2.6",
    "progress": "^2.0.3",
    "glob": "^10.3.10",
    "fs-extra": "^11.2.0",
    "path": "^0.12.7",
    "url": "^0.11.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "html-webpack-plugin": "^5.6.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.5",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "server.js",
      "!src/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "react/prop-types": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "files": [
    "src/",
    "server.js",
    "cli.js",
    "index.html",
    "manifest-schema.yaml",
    "README.md",
    "package.json"
  ]
}
